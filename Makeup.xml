<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Makeup">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F1E36B"
            >
            <TextView
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:text="Shopoholic"
                android:textSize="40dp"
                android:textColor="@color/black"
                />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/cart"
                android:backgroundTint="#F1E36B"
                android:id="@+id/cartb1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="100dp"
                android:layout_height="155dp"
                android:onClick="cb1"
                android:src="@drawable/c2" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="100dp"
                android:layout_height="155dp"
                android:onClick="cb2"
                android:src="@drawable/jwellery" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="100dp"
                android:layout_height="155dp"
                android:onClick="cb3"
                android:src="@drawable/h1" />

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="100dp"
                android:layout_height="155dp"
                android:onClick="cb4"
                android:src="@drawable/m1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/k1" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="Sugar Nude Pink Liquid Lipstick          Rs 370/"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/kb1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#009688"
                    android:text="Add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/k3" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="Huda Beauty Eyeshadow Palette            Rs 540/"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/kb2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#009688"
                    android:text="Add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/k4" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="Lakme 9To5 Primer+Matte Foundation 100ml   Rs 250/"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/kb3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#009688"
                    android:text="Add" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/k6" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="Nykaa Crystal Silver Nail Paint + Gloss    Rs 60/"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/kb4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#009688"
                    android:text="Add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
